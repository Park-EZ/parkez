# ============================================
# FRONTEND ENVIRONMENT VARIABLES (Vite)
# ============================================
# Note: Vite only exposes variables prefixed with VITE_

# Backend API URL
VITE_API_URL=http://localhost:3000

# Enable/disable API usage (set to 'true' to use backend API instead of localStorage)
VITE_USE_API=true

# ============================================
# BACKEND ENVIRONMENT VARIABLES (Node.js)
# ============================================

# MongoDB Connection
# For local Docker MongoDB (with authentication):
# MONGODB_URI=mongodb://admin:password@localhost:27017/ezpark?authSource=admin
# For local MongoDB (no auth):
MONGODB_URI=mongodb://localhost:27017
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ezpark?retryWrites=true&w=majority

# Database Name
DB_NAME=ezpark

# Server Configuration
PORT=3000
HOST=0.0.0.0

# CORS Configuration (comma-separated list of allowed origins, or leave empty for all)
# Example: CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ORIGINS=

# JWT Secret (for authentication)
JWT_SECRET=your-secret-key-here-change-in-production
VITE_PORT=5173
